<div class="d-flex flex-column align-items-center justify-content-center">
    <div>
        <h1 class="mb-3">Transactions</h1>
    </div>
    <div>
        <h5 class="mb-3">Name: <%= @ledger.name %></h5>
    </div>
    <div>
        <%=form_tag all_records_path,method: :post do%>
            <div class="mb-3">
            <%= label_tag :criteria,"Transaction Filter",class:"d-flex flex-column align-items-center justify-content-center" %>
            <%= select_tag :criteria,options_for_select(
            [
            ["All Transactions",[Time.parse("2000-01-01").strftime("%Y-%m-%d").to_datetime,Time.zone.now]],
            ["This Month",[Time.zone.now.beginning_of_month,Time.zone.now]],
            ["Last Month",[(Time.zone.now-1.month).beginning_of_month,(Time.zone.now-1.month).end_of_month]],
            ["This Quarter",[Time.zone.now.beginning_of_quarter,Time.zone.now]],
            ["Last Quarter",[Time.zone.now.last_quarter.beginning_of_quarter,Time.zone.now.last_quarter.end_of_quarter]],
            ["Last Year",[Time.zone.now-1.year,Time.zone.now]],
            ],selected: params[:criteria]
            ),class:"custom-select", onchange: "this.form.submit()" %>
            </div>
        <% end %>
    </div>
    <div>
        <%= render partial:"shared/show_transactions"  %>
    </div>    
</div>